---
import { slugify, resolveThumbnail, PLACEHOLDER_THUMBNAIL } from '../lib/data';

export interface Props {
  videoId: string;
  restaurantName: string;
  restaurantSlug: string;
  caption: string;
  city: string;
  cuisine: string;
  thumbnailUrl: string;
  stats: { likes: number; comments: number; shares: number };
  rank?: number;
}

const {
  videoId,
  restaurantName,
  restaurantSlug,
  caption,
  city,
  cuisine,
  thumbnailUrl,
  stats,
  rank,
} = Astro.props;

// Use the shared slugify() so the link always matches the static path
const captionSlug = slugify(caption).slice(0, 50).replace(/-$/, '');

const base = import.meta.env.BASE_URL;
const href = `${base}${restaurantSlug}/${captionSlug}-${videoId}/`;
// Resolve thumbnail: swap missing local images for a real placeholder, then prepend base
const safeThumbnail = resolveThumbnail(thumbnailUrl);
const resolvedThumbnail = safeThumbnail.startsWith('http') ? safeThumbnail : (safeThumbnail.startsWith('/') && !safeThumbnail.startsWith(base) ? base + safeThumbnail.slice(1) : safeThumbnail);

// Build a local OG-image fallback URL so expired TikTok CDN thumbnails degrade gracefully
const localOgFallback = `${base}assets/images/${videoId}/og.webp`;

// Only show the video thumbnail if we have a real image (not the placeholder)
const hasRealThumbnail = safeThumbnail !== PLACEHOLDER_THUMBNAIL;

function formatNumber(n: number): string {
  if (n >= 1000000) return (n / 1000000).toFixed(1) + 'M';
  if (n >= 1000) return (n / 1000).toFixed(1) + 'K';
  return n.toString();
}
---

<article class="card video-card">
  {hasRealThumbnail && (
    <div class="video-card__thumb" data-video-id={videoId} role="button" tabindex="0" aria-label={`Play review of ${restaurantName}`}>
      <img
        src={resolvedThumbnail}
        alt={`${restaurantName} food review thumbnail`}
        class="card__image"
        loading="lazy"
        width="270"
        height="480"
        data-fallback={localOgFallback}
        onerror={`if(!this.dataset.tried){this.dataset.tried='1';this.src=this.dataset.fallback}else{this.style.display='none'}`}
      />
      <div class="video-card__overlay">
        <span class="video-card__play">&#9654;</span>
      </div>
    </div>
  )}
  <div class="card__body">
    <a href={href} class="card__title-link">
      {rank && <span class="card__rank">#{rank}</span>}
      <h3 class="card__title">{restaurantName}</h3>
    </a>
    <div class="card__meta">
      <span class="tag tag--city">{city}</span>
      <span class="tag tag--cuisine">{cuisine}</span>
    </div>
    <div class="card__meta video-card__stats" style="margin-top: 8px;">
      <span title="Likes">&#10084; {formatNumber(stats.likes)}</span>
      <span title="Comments">&#128172; {formatNumber(stats.comments)}</span>
      <span title="Shares">&#8618; {formatNumber(stats.shares)}</span>
    </div>
  </div>
</article>

<script>
  function initVideoCards() {
    // Ensure there is a single shared modal container in the DOM
    let modal = document.getElementById('vc-modal');
    if (!modal) {
      modal = document.createElement('div');
      modal.id = 'vc-modal';
      modal.className = 'vc-modal';
      modal.setAttribute('role', 'dialog');
      modal.setAttribute('aria-modal', 'true');
      modal.innerHTML = `
        <div class="vc-modal__backdrop"></div>
        <div class="vc-modal__content">
          <div class="vc-modal__loading">
            <div class="video-card__spinner"></div>
          </div>
          <iframe class="vc-modal__iframe" allowfullscreen
            allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture; fullscreen"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
          <div class="vc-modal__fallback" style="display:none;"></div>
          <button class="vc-modal__close" aria-label="Close video">&times;</button>
        </div>
      `;
      document.body.appendChild(modal);

      const backdrop = modal.querySelector('.vc-modal__backdrop');
      const closeBtn = modal.querySelector('.vc-modal__close');
      const closeModal = () => {
        modal.classList.remove('vc-modal--open');
        document.body.style.overflow = '';
        const iframe = modal.querySelector('.vc-modal__iframe');
        if (iframe) iframe.src = '';
        const fallback = modal.querySelector('.vc-modal__fallback');
        if (fallback) { fallback.style.display = 'none'; fallback.innerHTML = ''; }
        const loader = modal.querySelector('.vc-modal__loading');
        if (loader) loader.style.display = 'flex';
      };
      backdrop?.addEventListener('click', closeModal);
      closeBtn?.addEventListener('click', closeModal);
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal.classList.contains('vc-modal--open')) closeModal();
      });
    }

    document.querySelectorAll('.video-card__thumb[data-video-id]').forEach((thumb) => {
      if (thumb.hasAttribute('data-vc-init')) return;
      thumb.setAttribute('data-vc-init', 'true');

      const handlePlay = () => {
        const videoId = thumb.getAttribute('data-video-id');
        if (!videoId) return;

        const tiktokUrl = `https://www.tiktok.com/@oneminreviews/video/${videoId}`;
        const iframeSrc = `https://www.tiktok.com/embed/v2/${videoId}`;

        const iframe = modal.querySelector('.vc-modal__iframe');
        const loader = modal.querySelector('.vc-modal__loading');
        const fallback = modal.querySelector('.vc-modal__fallback');

        // Reset state
        if (loader) loader.style.display = 'flex';
        if (fallback) { fallback.style.display = 'none'; fallback.innerHTML = ''; }
        if (iframe) {
          iframe.src = iframeSrc;
          iframe.title = `TikTok video ${videoId}`;
        }

        // Show modal
        modal.classList.add('vc-modal--open');
        document.body.style.overflow = 'hidden';

        // Remove spinner once iframe loads
        if (iframe) {
          iframe.addEventListener('load', () => {
            if (loader) loader.style.display = 'none';
          }, { once: true });
        }

        // Fallback: if nothing renders after 8s, show a direct link
        setTimeout(() => {
          if (loader && loader.style.display !== 'none') {
            loader.style.display = 'none';
            if (fallback) {
              fallback.innerHTML = `
                <span style="font-size:3rem;">&#127909;</span>
                <p style="margin:12px 0 8px;font-weight:700;font-size:1.2rem;">Open on TikTok</p>
                <a href="${tiktokUrl}" target="_blank" rel="noopener noreferrer"
                   style="color:var(--color-accent, #ff3b5c);text-decoration:underline;font-size:1.1rem;">
                  Watch this review &rarr;
                </a>
              `;
              fallback.style.display = 'flex';
            }
          }
        }, 8000);
      };

      thumb.addEventListener('click', handlePlay);
      thumb.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          handlePlay();
        }
      });
    });
  }

  document.addEventListener('DOMContentLoaded', initVideoCards);
  document.addEventListener('astro:page-load', initVideoCards);
</script>

<style>
  .video-card__thumb {
    position: relative;
    overflow: hidden;
    cursor: pointer;
  }

  .video-card__overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.25);
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .video-card:hover .video-card__overlay {
    opacity: 1;
  }

  .video-card__play {
    font-size: 2.5rem;
    color: #fff;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
  }

  /* ---------- Existing card styles ---------- */
  .card__title-link {
    display: flex;
    align-items: baseline;
    gap: var(--space-sm, 0.5rem);
  }

  .card__rank {
    flex-shrink: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent, #ff3b5c);
    color: #fff;
    font-size: 0.75rem;
    font-weight: 800;
    padding: 2px 8px;
    border-radius: var(--radius-sm, 6px);
    line-height: 1.4;
    white-space: nowrap;
  }

  .video-card__stats {
    font-size: 0.8rem;
  }

  .video-card__stats span {
    display: inline-flex;
    align-items: center;
    gap: 3px;
  }

  @media (max-width: 768px) {
    .video-card__play {
      font-size: 1.8rem;
    }

    .video-card__stats {
      font-size: 0.72rem;
    }
  }
</style>

<!-- Global modal styles (only rendered once, scoped via :global) -->
<style is:global>
  /* ---------- Video Modal Overlay ---------- */
  .vc-modal {
    position: fixed;
    inset: 0;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.25s ease;
  }

  .vc-modal--open {
    pointer-events: auto;
    opacity: 1;
  }

  .vc-modal__backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.85);
  }

  .vc-modal__content {
    position: relative;
    width: 90vw;
    max-width: 400px;
    height: 85vh;
    max-height: 750px;
    border-radius: 16px;
    overflow: hidden;
    background: var(--color-surface, #1a1a2e);
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.6);
  }

  .vc-modal__iframe {
    width: 100%;
    height: 100%;
    border: none;
    display: block;
  }

  .vc-modal__loading {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-surface, #1a1a2e);
    z-index: 2;
  }

  .vc-modal__fallback {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 1.5rem;
    color: #fff;
    z-index: 3;
    background: var(--color-surface, #1a1a2e);
  }

  .vc-modal__close {
    position: absolute;
    top: 12px;
    right: 12px;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.7);
    color: #fff;
    border: none;
    border-radius: 50%;
    font-size: 1.5rem;
    cursor: pointer;
    z-index: 20;
    transition: background 0.2s ease, transform 0.15s ease;
  }

  .vc-modal__close:hover {
    background: rgba(0, 0, 0, 0.95);
    transform: scale(1.1);
  }

  /* Spinner (shared) */
  .video-card__spinner {
    width: 32px;
    height: 32px;
    border: 3px solid var(--color-border, #333);
    border-top-color: var(--color-accent, #ff3b5c);
    border-radius: 50%;
    animation: vc-spin 0.7s linear infinite;
  }

  @keyframes vc-spin {
    to { transform: rotate(360deg); }
  }

  @media (max-width: 480px) {
    .vc-modal__content {
      width: 96vw;
      height: 90vh;
      max-height: none;
      border-radius: 12px;
    }
  }
</style>
