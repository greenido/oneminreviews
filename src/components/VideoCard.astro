---
import { slugify, resolveThumbnail, PLACEHOLDER_THUMBNAIL } from '../lib/data';

export interface Props {
  videoId: string;
  restaurantName: string;
  restaurantSlug: string;
  caption: string;
  city: string;
  cuisine: string;
  thumbnailUrl: string;
  stats: { likes: number; comments: number; shares: number };
  rank?: number;
}

const {
  videoId,
  restaurantName,
  restaurantSlug,
  caption,
  city,
  cuisine,
  thumbnailUrl,
  stats,
  rank,
} = Astro.props;

// Use the shared slugify() so the link always matches the static path
const captionSlug = slugify(caption).slice(0, 50).replace(/-$/, '');

const base = import.meta.env.BASE_URL;
const href = `${base}${restaurantSlug}/${captionSlug}-${videoId}/`;
// Resolve thumbnail: swap missing local images for a real placeholder, then prepend base
const safeThumbnail = resolveThumbnail(thumbnailUrl);
const resolvedThumbnail = safeThumbnail.startsWith('http') ? safeThumbnail : (safeThumbnail.startsWith('/') && !safeThumbnail.startsWith(base) ? base + safeThumbnail.slice(1) : safeThumbnail);

// Only show the video thumbnail if we have a real image (not the placeholder)
const hasRealThumbnail = safeThumbnail !== PLACEHOLDER_THUMBNAIL;

function formatNumber(n: number): string {
  if (n >= 1000000) return (n / 1000000).toFixed(1) + 'M';
  if (n >= 1000) return (n / 1000).toFixed(1) + 'K';
  return n.toString();
}
---

<article class="card video-card">
  {hasRealThumbnail && (
    <div class="video-card__thumb" data-video-id={videoId} role="button" tabindex="0" aria-label={`Play review of ${restaurantName}`}>
      <img
        src={resolvedThumbnail}
        alt={`${restaurantName} food review thumbnail`}
        class="card__image"
        loading="lazy"
        width="270"
        height="480"
        onerror="this.style.display='none'"
      />
      <div class="video-card__overlay">
        <span class="video-card__play">&#9654;</span>
      </div>
    </div>
  )}
  <div class="card__body">
    <a href={href} class="card__title-link">
      {rank && <span class="card__rank">#{rank}</span>}
      <h3 class="card__title">{restaurantName}</h3>
    </a>
    <div class="card__meta">
      <span class="tag tag--city">{city}</span>
      <span class="tag tag--cuisine">{cuisine}</span>
    </div>
    <div class="card__meta video-card__stats" style="margin-top: 8px;">
      <span title="Likes">&#10084; {formatNumber(stats.likes)}</span>
      <span title="Comments">&#128172; {formatNumber(stats.comments)}</span>
      <span title="Shares">&#8618; {formatNumber(stats.shares)}</span>
    </div>
  </div>
</article>

<script>
  function initVideoCards() {
    document.querySelectorAll('.video-card__thumb[data-video-id]').forEach((thumb) => {
      if (thumb.hasAttribute('data-vc-init')) return;
      thumb.setAttribute('data-vc-init', 'true');

      const handlePlay = () => {
        // Don't re-init if already playing
        if (thumb.classList.contains('video-card__thumb--playing')) return;

        const videoId = thumb.getAttribute('data-video-id');
        if (!videoId) return;

        const iframeSrc = `https://www.tiktok.com/embed/v2/${videoId}`;

        // Save original content for restore
        const originalHTML = thumb.innerHTML;

        // Replace thumbnail with embed
        thumb.innerHTML = `
          <div class="video-card__embed-wrap">
            <div class="video-card__embed-loading">
              <div class="video-card__spinner"></div>
            </div>
            <iframe
              src="${iframeSrc}"
              class="video-card__embed-iframe"
              allowfullscreen
              allow="encrypted-media"
              style="opacity: 0; position: absolute; inset: 0; width: 100%; height: 100%; border: none;"
            ></iframe>
            <button class="video-card__close-btn" aria-label="Close video">&times;</button>
          </div>
        `;
        thumb.classList.add('video-card__thumb--playing');

        const iframe = thumb.querySelector('iframe');
        const loader = thumb.querySelector('.video-card__embed-loading');
        const closeBtn = thumb.querySelector('.video-card__close-btn');

        if (iframe) {
          iframe.addEventListener('load', () => {
            iframe.style.opacity = '1';
            if (loader) loader.remove();
          });
        }

        if (closeBtn) {
          closeBtn.addEventListener('click', (e) => {
            e.stopPropagation();
            thumb.innerHTML = originalHTML;
            thumb.classList.remove('video-card__thumb--playing');
          }, { once: true });
        }
      };

      thumb.addEventListener('click', handlePlay);
      thumb.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          handlePlay();
        }
      });
    });
  }

  document.addEventListener('DOMContentLoaded', initVideoCards);
  document.addEventListener('astro:page-load', initVideoCards);
</script>

<style>
  .video-card__thumb {
    position: relative;
    overflow: hidden;
    cursor: pointer;
  }

  .video-card__thumb--playing {
    aspect-ratio: 9 / 16;
    min-height: 480px;
    border-radius: var(--radius-md, 12px) var(--radius-md, 12px) 0 0;
    overflow: hidden;
  }

  .video-card__overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.25);
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .video-card:hover .video-card__overlay {
    opacity: 1;
  }

  .video-card__play {
    font-size: 2.5rem;
    color: #fff;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
  }

  /* ---------- Inline embed ---------- */
  .video-card__embed-wrap {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .video-card__embed-iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: none;
    border-radius: var(--radius-md, 12px) var(--radius-md, 12px) 0 0;
    transition: opacity 0.3s ease;
  }

  .video-card__embed-loading {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-surface, #1a1a2e);
    border-radius: var(--radius-md, 12px) var(--radius-md, 12px) 0 0;
    z-index: 2;
  }

  .video-card__spinner {
    width: 28px;
    height: 28px;
    border: 3px solid var(--color-border, #333);
    border-top-color: var(--color-accent, #ff3b5c);
    border-radius: 50%;
    animation: vc-spin 0.7s linear infinite;
  }

  @keyframes vc-spin {
    to { transform: rotate(360deg); }
  }

  .video-card__close-btn {
    position: absolute;
    top: 8px;
    right: 8px;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.7);
    color: #fff;
    border: none;
    border-radius: 50%;
    font-size: 1.2rem;
    cursor: pointer;
    z-index: 20;
    transition: background 0.2s ease;
  }

  .video-card__close-btn:hover {
    background: rgba(0, 0, 0, 0.9);
  }

  /* ---------- Existing card styles ---------- */
  .card__title-link {
    display: flex;
    align-items: baseline;
    gap: var(--space-sm, 0.5rem);
  }

  .card__rank {
    flex-shrink: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent, #ff3b5c);
    color: #fff;
    font-size: 0.75rem;
    font-weight: 800;
    padding: 2px 8px;
    border-radius: var(--radius-sm, 6px);
    line-height: 1.4;
    white-space: nowrap;
  }

  .video-card__stats {
    font-size: 0.8rem;
  }

  .video-card__stats span {
    display: inline-flex;
    align-items: center;
    gap: 3px;
  }

  @media (max-width: 768px) {
    .video-card__play {
      font-size: 1.8rem;
    }

    .video-card__stats {
      font-size: 0.72rem;
    }

    .video-card__thumb--playing {
      min-height: 400px;
    }
  }
</style>
